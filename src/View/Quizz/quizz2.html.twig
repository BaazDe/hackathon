{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/quizz2.css">
{% endblock %}

{% block content %}
    <section class ="timer">
        <div id='progress'></div>
        <div class="underProgressBar"></div>
    </section>
    <div  class="content">

        <div class="question">
            <p>Who directed this movie?</p>
        </div>

        <div class="answering">
            <div class="poster">
                {% for randomMovie in randomMovies %}
                <img src="{{randomMovie.posterUrl}}" alt="">
                {% endfor %}
            </div>

            <div id ="choices" class="answers">
                {% for randomMovie in randomMovies %}
                    <button class="random" onclick="window.location.href='{{ path.random }}'">{{ randomMovie.director }}</button>
                {% endfor %}
                {% for randomWrongMovie in randomWrongMovies %}
                    <a id = "{{ randomWrongMovie.id }}"href="#" onclick="checkQuestion(this.id)" class="random"> {{ randomWrongMovie.director }}</a>
                {% endfor %}

            </div>
        </div>

        <p id="score">{{ score[0]['score'] }}</p>

    </div>

{% endblock %}

{% block javascript %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <!--<script src="/assets/JS/randomizeButtons.js"></script>-->
    <script src="/assets/JS/timerProgressbar.js"></script>
{% endblock %}
