{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/quizz2.css">
{% endblock %}

{% block content %}
    <section class ="timer">
        <div id='progress'></div>
        <div class="underProgressBar"></div>
    </section>
    <div class="content">

        <div class="question">
            <p>Who directed this movie?</p>
        </div>

        <div class="answering">
            <div class="poster">
                {% for randomMovie in randomMovies %}
                <img src="{{randomMovie.posterUrl}}" alt="">
                {% endfor %}
            </div>

            <div class="answers">
                {% for randomMovie in randomMovies %}
                   <a href="../../quizz/quizz/?id={{ randomMovie.id }}">{{ randomMovie.director }}</a>
                {% endfor %}
                {% for randomWrongMovie in randomWrongMovies %}
                   <a href="#" onclick="checkQuestion()">{{ randomWrongMovie.director }}</a>
                {% endfor %}

            </div>
        </div>

    </div>

{% endblock %}

{% block javascript %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="../../assets/JS/timerProgressbar.js"></script>
{% endblock %}
